<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegistration">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="57dp"
        android:text="User Registration"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/et_registration_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_registration_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_registration_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_registration_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/et_registration_fullname"
        app:layout_constraintStart_toStartOf="@+id/et_registration_username"
        app:layout_constraintTop_toBottomOf="@+id/et_registration_username" />

    <EditText
        android:id="@+id/et_registration_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/sw_registration_istherapist"
        app:layout_constraintStart_toStartOf="@+id/et_registration_password"
        app:layout_constraintTop_toBottomOf="@+id/et_registration_password" />

    <Switch
        android:id="@+id/sw_registration_istherapist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="31dp"
        android:text="Are you a therapist?"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_registration_register"
        app:layout_constraintStart_toStartOf="@+id/et_registration_fullname"
        app:layout_constraintTop_toBottomOf="@+id/et_registration_fullname" />

    <ImageView
        android:id="@+id/imgbtn_registration_register"
        android:layout_width="156dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtn_registration_cancelregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw_registration_istherapist"
        app:srcCompat="@android:drawable/button_onoff_indicator_off" />

    <ImageView
        android:id="@+id/imgbtn_registration_cancelregister"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginBottom="203dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgbtn_registration_register"
        app:layout_constraintStart_toStartOf="@+id/imgbtn_registration_register"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn_registration_register"
        app:srcCompat="@android:drawable/button_onoff_indicator_off" />

</androidx.constraintlayout.widget.ConstraintLayout>